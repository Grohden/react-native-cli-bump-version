{
  "compilerOptions": {
    "outDir": "lib/",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "module": "CommonJS",
    "target": "ES2016",
    "declaration": true,
    "strict": true,
    "strictNullChecks": true
  },
  "include": [
    "./src/*"
  ],
  "exclude": [
    "./bin/*",
    "./lib/*"
  ]
}
